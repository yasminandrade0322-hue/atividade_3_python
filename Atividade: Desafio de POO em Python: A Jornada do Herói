#Parte de Yasmim

class personagem():
  def __init__ (self, nome, pontos_vida, forca_ataque):
    self.nome = nome
    self._pontos_vida = pontos_vida
    self.forca_ataque = forca_ataque

  def get_pontos_vida(self):
    return self._pontos_vida #retorna o valor atual dos pontos de vida

  def set_pontos_vida(self, novo_valor):
    if novo_valor < 0:
      self._pontos_vida = 0 #impede valores negativos
    else:
      self._pontos_vida = novo_valor

  def receber_dano(self, dano):
    if dano < 0:
      dano = 0 
    nova_vida = self._pontos_vida - dano
    self.set_pontos_vida = nova_vida

  

class guerreiro(personagem):
  def __init__ (self, nome, _pontos_vida, forca_ataque):
    super().__init__(nome, _pontos_vida, forca_ataque)
    self.arma = None  #Arma do herói

  def informacoes(self):
    print(f"Nome: {self.nome}\nPontos de vida: {self.pontos_vida}\nForça de ataque: {self.forca_ataque}")
    if self.arma:
      print(f"Arma equipada: {self.arma.nome} (Dano: {self.arma.poder_dano})")

  def atacar(self, inimigo):
    dano_total = self.forca_ataque
    if self.arma:  #Considera o poder da arma
      dano_total += self.arma.poder_dano
    print(f"{self.nome} ataca {inimigo.nome} causando {dano_total} de dano!")
    inimigo._pontos_vida -= dano_total
    inimigo.receber_dano(dano_total) #dano aplicado de forma segura(a vida não fica negativa)


class mago(personagem):
  def __init__ (self, nome, _pontos_vida, forca_ataque, tipo_magia):
    super().__init__(nome, _pontos_vida, forca_ataque)
    self.tipo_magia = tipo_magia
    self.arma = None

  def informacoes(self):
    print(f"Nome: {self.nome}\nPontos de vida: {self._pontos_vida}\nForça de ataque: {self.forca_ataque}\nTipo de magia: {self.tipo_magia}")
    if self.arma:
      print(f"Arma equipada: {self.arma.nome} (Dano: {self.arma.poder_dano})")

  def atacar(self, inimigo):
    dano_total = self.forca_ataque
    if self.arma:
      dano_total += self.arma.poder_dano
    print(f"{self.nome} lança {self.tipo_magia} em {inimigo.nome}, causando {dano_total} de dano!")
    inimigo._pontos_vida -= dano_total
    inimigo.receber_dano(dano_total)


class arqueiro(personagem):
  def __init__ (self, nome, _pontos_vida, forca_ataque, precisao_arco):
    super().__init__(nome, _pontos_vida, forca_ataque)
    self.precisao_arco = precisao_arco
    self.arma = None

  def informacoes(self):
    print(f"Nome: {self.nome}\nPontos de vida: {self.pontos_vida}\nForça de ataque: {self.forca_ataque}\nPrecisão do arco: {self.precisao_arco}")
    if self.arma:
      print(f"Arma equipada: {self.arma.nome} (Dano: {self.arma.poder_dano})")

  def atacar(self, inimigo):
    dano_total = self.forca_ataque
    if self.arma:
      dano_total += self.arma.poder_dano
    print(f"{self.nome} dispara uma flecha em {inimigo.nome}, causando {dano_total} de dano!")
    inimigo._pontos_vida -= dano_total
    inimigo.receber_dano(dano_total)


class inimigo():
  def __init__ (self, nome, pontos_vida, forca_ataque):
    self.nome = nome
    self._pontos_vida = pontos_vida
    self.forca_ataque = forca_ataque

#Parte de Mateus

  def informacoes(self):
    print(f"Inimigo: {self.nome}\nPontos de vida: {self.pontos_vida}\nForça de ataque: {self.forca_ataque}")

  def atacar(self, heroi):
    print(f"{self.nome} ataca {heroi.nome}, causando {self.forca_ataque} de dano!")
    heroi._pontos_vida -= self.forca_ataque

#parte yasmin
class item():
  def __init__(self, nome):
    self.nome = nome

class iventario():
  def __init__(self):
    self.itens = []

  def adicionar_item(self, item):
    self.itens.append(item)
    print(f"{item.nome} adicionado ao iventário!")
  
  def remover_item(self, item):
    if item in self.itens:
      self.itens.remove(item)
      print(f"{item.nome} removido do iventário!")
    else:
      print(f"{item.nome} não encontrado no iventário!")

#parte mateus
class Arma(item):
  def __init__(self, nome, poder_dano):
    super().__init__(nome)
    self.poder_dano = poder_dano


class Pocao(item):
  def __init__(self, nome, valor_cura):
    super().__init__(nome)
    self.valor_cura = valor_cura

  def usar(self, heroi):
    heroi.pontos_vida += self.valor_cura
    print(f"{heroi.nome} usou {self.nome} e recuperou {self.valor_cura} de vida!")

  def equipar_arma(heroi, arma):
    heroi.arma = arma
    print(f"{heroi.nome} equipou {arma.nome}!")
